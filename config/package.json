{
  "name": "hype-presale",
  "version": "1.0.0",
  "description": "HYPE Token Presale Smart Contract with multi-round support and vesting",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "compile": "hardhat compile",
    "deploy:local": "hardhat run scripts/deploy-presale.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy-presale.js --network sepolia",
    "deploy:bsc-testnet": "hardhat run scripts/deploy-presale.js --network bscTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy-presale.js --network mainnet",
    "deploy:bsc": "hardhat run scripts/deploy-presale.js --network bsc",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:mainnet": "hardhat verify --network mainnet",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint '**/*.js' --fix",
    "lint:sol": "solhint 'src/contracts/**/*.sol'",
    "lint:sol:fix": "solhint 'src/contracts/**/*.sol' --fix",
    "slither": "slither src/contracts/PresaleSolidity.sol --print human-summary",
    "slither:full": "slither src/contracts/PresaleSolidity.sol",
    "mythx": "mythx analyze src/contracts/PresaleSolidity.sol",
    "format": "prettier --write '**/*.{js,json,md,sol}'",
    "format:check": "prettier --check '**/*.{js,json,md,sol}'",
    "clean": "hardhat clean && rm -rf artifacts cache coverage coverage.json",
    "node": "hardhat node",
    "accounts": "hardhat accounts"
  },
  "keywords": [
    "ethereum",
    "blockchain",
    "smart-contract",
    "presale",
    "ico",
    "token",
    "vesting",
    "hardhat",
    "solidity"
  ],
  "author": "HYPE Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "ethers": "^6.7.0",
    "hardhat": "^2.17.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.4",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
