# HypeAI Unified Database Configuration
# PostgreSQL connection settings for all AI agents

# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hypeai
DB_USER=hypeai_user
DB_PASSWORD=hypeai_password

# Connection Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECT_TIMEOUT=10000

# SSL Settings (set to true for production)
DB_SSL=false

# Query Timeout (milliseconds)
DB_QUERY_TIMEOUT=30000

# Logging
DB_LOG_QUERIES=false
DB_LOG_ERRORS=true
