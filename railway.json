{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "startCommand": "node scripts/twitter-scheduler.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "regions": [
    "us-west1"
  ],
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "TZ": "Europe/Moscow"
      }
    }
  }
}
