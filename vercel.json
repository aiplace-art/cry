{
  "version": 2,
  "name": "hypeai-website",
  "buildCommand": "mkdir -p public && rsync -av --exclude='node_modules' --exclude='package-lock.json' --exclude='.git' website/ public/",
  "installCommand": "echo 'No npm dependencies needed for static site'",
  "outputDirectory": "public",
  "cleanUrls": true,
  "public": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        }
      ]
    }
  ]
}
