# ============================================
# HYPEAI TELEGRAM BOT CONFIGURATION
# ============================================
# Complete setup guide: docs/TELEGRAM_BOT_SETUP.md
#
# Quick Start:
# 1. Copy this file: cp .env.telegram.example .env.telegram
# 2. Get bot token from @BotFather on Telegram
# 3. Get channel/group IDs from @userinfobot
# 4. Fill in all required fields below
# 5. Run: node scripts/telegram-community-bot.js
# ============================================

# ============================================
# TELEGRAM API CREDENTIALS
# ============================================

# Bot Token from @BotFather
# Example: 1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_TOKEN=

# Channel Configuration
# Can be username (@hypeai) or numeric ID (-1001234567890)
TELEGRAM_CHANNEL_ID=@hypeai
TELEGRAM_CHANNEL_USERNAME=hypeai

# Group Configuration (numeric ID only)
# Get from @userinfobot
TELEGRAM_GROUP_ID=-1001234567890

# Admin User IDs (comma-separated)
# Get your ID from @userinfobot
TELEGRAM_ADMIN_IDS=123456789,987654321

# ============================================
# AIRDROP CONFIGURATION
# ============================================

# Reward per airdrop completion (in HYPE tokens)
AIRDROP_REWARD=500

# Reward per referral (in HYPE tokens)
AIRDROP_REFERRAL_REWARD=100

# Minimum tasks required to complete airdrop
AIRDROP_MIN_TASKS=3

# Total airdrop pool (in HYPE tokens)
AIRDROP_TOTAL_POOL=1000000

# Maximum airdrops per user
AIRDROP_MAX_PER_USER=1

# Airdrop enabled/disabled
AIRDROP_ENABLED=true

# Airdrop start date (ISO format)
AIRDROP_START_DATE=2025-01-15T00:00:00Z

# Airdrop end date (ISO format)
AIRDROP_END_DATE=2025-03-15T23:59:59Z

# ============================================
# TASK CONFIGURATION
# ============================================

# Task 1: Join Telegram Channel
TASK_JOIN_TELEGRAM=true
TASK_JOIN_TELEGRAM_CHANNEL=@hypeai

# Task 2: Follow Twitter
TASK_FOLLOW_TWITTER=true
TASK_FOLLOW_TWITTER_HANDLE=@hypeai

# Task 3: Retweet Post
TASK_RETWEET=true
TASK_RETWEET_URL=https://twitter.com/hypeai/status/123456789

# Task 4: Join Discord
TASK_JOIN_DISCORD=true
TASK_JOIN_DISCORD_INVITE=https://discord.gg/hypeai

# Task 5: Refer Friends
TASK_REFER_FRIENDS=true
TASK_REFER_FRIENDS_MIN=3

# ============================================
# CONTENT AUTOMATION
# ============================================

# Auto-posting enabled/disabled
AUTO_POST_ENABLED=true

# Hours between automatic posts (1-24)
AUTO_POST_INTERVAL=4

# Content types to post (comma-separated)
# Options: news, updates, memes, signals, education, polls
CONTENT_TYPES=news,updates,memes,signals,education

# Post to channel only or also to group
POST_TO_CHANNEL=true
POST_TO_GROUP=false

# Use AI for content generation (requires OpenAI API key)
USE_AI_CONTENT=false
OPENAI_API_KEY=

# ============================================
# MODERATION SETTINGS
# ============================================

# Auto-moderation enabled/disabled
AUTO_MODERATE=true

# Spam detection settings
SPAM_MAX_MESSAGES=5  # Max messages per time window
SPAM_TIME_WINDOW=60  # Time window in seconds
SPAM_ACTION=warn     # Options: warn, mute, ban

# Bad words filter (comma-separated)
BAD_WORDS=scam,fake,fraud,ponzi,rug,dump,exit scam

# Delete spam messages automatically
DELETE_SPAM=true

# Mute duration for spam (in hours)
MUTE_DURATION=1

# Warnings before ban
MAX_WARNINGS=3

# Block links from new users (joined < X hours ago)
BLOCK_LINKS_NEW_USERS=true
NEW_USER_HOURS=24

# Block external links (not in whitelist)
BLOCK_EXTERNAL_LINKS=false
LINK_WHITELIST=hypeai.io,twitter.com/hypeai,discord.gg/hypeai

# ============================================
# WELCOME SYSTEM
# ============================================

# Welcome message enabled/disabled
WELCOME_ENABLED=true

# Delete welcome message after X seconds (0 = never)
WELCOME_DELETE_AFTER=0

# Pin welcome message
WELCOME_PIN=false

# Welcome message text (supports {username}, {firstName}, {lastName})
WELCOME_MESSAGE="ðŸŽ‰ Welcome to HypeAI, {username}!\n\nðŸ’° Claim airdrop: /airdrop\nðŸ”— Invite friends: /referral"

# ============================================
# REFERRAL SYSTEM
# ============================================

# Referral tracking enabled/disabled
REFERRAL_ENABLED=true

# Show referral leaderboard
REFERRAL_LEADERBOARD=true

# Top referrers to show in leaderboard
REFERRAL_LEADERBOARD_TOP=10

# Bonus for top referrers (in HYPE tokens)
REFERRAL_BONUS_1ST=1000
REFERRAL_BONUS_2ND=500
REFERRAL_BONUS_3RD=250

# ============================================
# ANALYTICS & REPORTING
# ============================================

# Analytics enabled/disabled
ANALYTICS_ENABLED=true

# Hours between analytics reports (sent to admins)
ANALYTICS_REPORT_INTERVAL=24

# Export format (comma-separated)
# Options: json, csv, xlsx
ANALYTICS_EXPORT_FORMAT=json,csv

# Track user activity
TRACK_USER_ACTIVITY=true

# Track message content (for sentiment analysis)
TRACK_MESSAGE_CONTENT=false

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Database file path (relative to project root)
DATABASE_PATH=.telegram/database.json

# Database type (json, mongodb, postgresql)
DATABASE_TYPE=json

# MongoDB connection (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/hypeai

# PostgreSQL connection (if using PostgreSQL)
POSTGRESQL_URI=postgresql://user:pass@localhost:5432/hypeai

# ============================================
# BACKUP CONFIGURATION
# ============================================

# Backup enabled/disabled
BACKUP_ENABLED=true

# Hours between automatic backups
BACKUP_INTERVAL=6

# Backup directory (relative to project root)
BACKUP_DIR=.telegram/backups

# Maximum backups to keep (older ones deleted)
BACKUP_MAX_FILES=30

# Upload backups to cloud storage
BACKUP_UPLOAD=false
BACKUP_UPLOAD_S3_BUCKET=
BACKUP_UPLOAD_S3_KEY=
BACKUP_UPLOAD_S3_SECRET=

# ============================================
# NOTIFICATION SETTINGS
# ============================================

# Send notifications to admins
NOTIFY_ADMINS=true

# Notify on new member
NOTIFY_NEW_MEMBER=false

# Notify on airdrop completion
NOTIFY_AIRDROP_COMPLETE=true

# Notify on spam detection
NOTIFY_SPAM_DETECTED=true

# Notify on errors
NOTIFY_ERRORS=true

# ============================================
# PRICE TRACKING
# ============================================

# Price tracking enabled/disabled
PRICE_TRACKING_ENABLED=true

# Price update interval (in minutes)
PRICE_UPDATE_INTERVAL=5

# Price API endpoint
PRICE_API=https://api.dexscreener.com/latest/dex/tokens/HYPE

# Price alert thresholds (in % change)
PRICE_ALERT_INCREASE=10
PRICE_ALERT_DECREASE=-10

# ============================================
# ADVANCED SETTINGS
# ============================================

# Debug mode (verbose logging)
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=.telegram/bot.log

# Timezone (for timestamps)
TIMEZONE=UTC

# Language (en, ru, es, zh)
LANGUAGE=en

# Rate limiting (requests per minute)
RATE_LIMIT=30

# Webhook mode (instead of polling)
USE_WEBHOOK=false
WEBHOOK_URL=https://yourdomain.com/bot
WEBHOOK_PORT=8443

# ============================================
# INTEGRATION SETTINGS
# ============================================

# Integrate with AI marketing bot
INTEGRATE_MARKETING_BOT=false
MARKETING_BOT_API=http://localhost:3001

# Integrate with website
INTEGRATE_WEBSITE=false
WEBSITE_API=https://hypeai.io/api

# Integrate with smart contracts (for on-chain rewards)
INTEGRATE_BLOCKCHAIN=false
BLOCKCHAIN_RPC=https://bsc-dataseed.binance.org
BLOCKCHAIN_NETWORK=bsc
REWARD_CONTRACT_ADDRESS=0x...

# ============================================
# SECURITY SETTINGS
# ============================================

# Encrypt database
ENCRYPT_DATABASE=false
ENCRYPTION_KEY=

# API rate limiting
API_RATE_LIMIT=100  # requests per minute

# CAPTCHA for new users
REQUIRE_CAPTCHA=false
CAPTCHA_PROVIDER=hcaptcha  # hcaptcha, recaptcha
CAPTCHA_SITE_KEY=
CAPTCHA_SECRET_KEY=

# 2FA for admin commands
REQUIRE_2FA_ADMIN=false

# IP whitelist for webhooks (comma-separated)
IP_WHITELIST=149.154.160.0/20,91.108.4.0/22

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable specific features
FEATURE_AIRDROP=true
FEATURE_REFERRAL=true
FEATURE_PRICE_TRACKING=true
FEATURE_AUTO_POSTING=true
FEATURE_MODERATION=true
FEATURE_ANALYTICS=true
FEATURE_GAMES=false
FEATURE_STAKING_INFO=false
FEATURE_NFT_GIVEAWAY=false

# ============================================
# EXPERIMENTAL FEATURES
# ============================================

# AI-powered chat responses
AI_CHAT_ENABLED=false
AI_CHAT_MODEL=gpt-4

# Sentiment analysis
SENTIMENT_ANALYSIS=false

# Auto-translate messages
AUTO_TRANSLATE=false
TRANSLATION_API=google  # google, deepl

# Voice message transcription
TRANSCRIBE_VOICE=false
TRANSCRIPTION_API=openai

# Image recognition (for meme contests)
IMAGE_RECOGNITION=false

# ============================================
# CUSTOM COMMANDS
# ============================================

# Add your own custom commands (comma-separated)
CUSTOM_COMMANDS=/moon,/lambo,/wen

# Custom command handlers (JSON)
# Format: {"command": "response"}
CUSTOM_COMMAND_HANDLERS={"moon": "ðŸŒ™ Soonâ„¢", "lambo": "ðŸš— After moon!", "wen": "â° Wen ready"}

# ============================================
# END OF CONFIGURATION
# ============================================

