# ElonBTC Presale - Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# CONTRACT ADDRESSES (REQUIRED)
# ============================================

# Presale contract address (deployed on BSC)
NEXT_PUBLIC_PRESALE_CONTRACT_ADDRESS=

# USDT contract address on BSC Mainnet
NEXT_PUBLIC_USDT_CONTRACT_ADDRESS=0x55d398326f99059fF775485246999027B3197955

# ============================================
# RPC CONFIGURATION (REQUIRED)
# ============================================

# BSC Mainnet RPC URL
NEXT_PUBLIC_BSC_RPC_URL=https://bsc-dataseed1.binance.org

# BSC Testnet RPC URL (for testing)
NEXT_PUBLIC_BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545

# ============================================
# API KEYS (OPTIONAL)
# ============================================

# BSCScan API Key (for contract verification and transaction lookups)
# Get from: https://bscscan.com/myapikey
NEXT_PUBLIC_BSCSCAN_API_KEY=

# CoinGecko API Key (for BNB price fetching)
# Get from: https://www.coingecko.com/en/api/pricing
NEXT_PUBLIC_COINGECKO_API_KEY=

# WalletConnect Project ID (for WalletConnect v2)
# Get from: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# ============================================
# ANALYTICS (OPTIONAL)
# ============================================

# Google Analytics Measurement ID
# Get from: https://analytics.google.com
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Plausible Analytics Domain
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# Vercel Analytics (automatically enabled on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================

# Environment: development | staging | production
NEXT_PUBLIC_ENVIRONMENT=development

# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# ============================================
# PRESALE CONFIGURATION (OPTIONAL)
# ============================================

# Presale start date (ISO 8601 format)
NEXT_PUBLIC_PRESALE_START_DATE=2025-01-01T00:00:00Z

# Presale end date (ISO 8601 format)
NEXT_PUBLIC_PRESALE_END_DATE=2025-03-31T23:59:59Z

# Token price in USD (for display purposes)
NEXT_PUBLIC_TOKEN_PRICE_USD=0.00001

# Minimum purchase amount in USD
NEXT_PUBLIC_MIN_PURCHASE_USD=10

# Maximum purchase amount in USD
NEXT_PUBLIC_MAX_PURCHASE_USD=100000

# ============================================
# SOCIAL LINKS (OPTIONAL)
# ============================================

NEXT_PUBLIC_TWITTER_URL=https://twitter.com/elonbtc
NEXT_PUBLIC_TELEGRAM_URL=https://t.me/elonbtc
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/elonbtc
NEXT_PUBLIC_GITHUB_URL=https://github.com/elonbtc

# ============================================
# FEATURE FLAGS (OPTIONAL)
# ============================================

# Enable USDT purchases
NEXT_PUBLIC_ENABLE_USDT=true

# Enable referral system
NEXT_PUBLIC_ENABLE_REFERRALS=false

# Enable whitelist
NEXT_PUBLIC_ENABLE_WHITELIST=false

# Show countdown timer
NEXT_PUBLIC_SHOW_COUNTDOWN=true

# Show social proof (purchases)
NEXT_PUBLIC_SHOW_SOCIAL_PROOF=true

# ============================================
# SECURITY (OPTIONAL)
# ============================================

# Rate limiting (requests per minute)
NEXT_PUBLIC_RATE_LIMIT=30

# Enable CAPTCHA (for anti-bot protection)
NEXT_PUBLIC_ENABLE_CAPTCHA=false

# Recaptcha Site Key
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=

# ============================================
# MONITORING (OPTIONAL)
# ============================================

# Sentry DSN (for error tracking)
NEXT_PUBLIC_SENTRY_DSN=

# LogRocket App ID (for session replay)
NEXT_PUBLIC_LOGROCKET_APP_ID=

# ============================================
# PRIVATE SALE - PAYMENT GATEWAY CONFIGURATION
# ============================================

# Payment Gateway API Keys
NEXT_PUBLIC_COINBASE_COMMERCE_API_KEY=
NEXT_PUBLIC_NOWPAYMENTS_API_KEY=
NEXT_PUBLIC_COINGATE_API_KEY=

# Web3 Configuration for Private Sale
NEXT_PUBLIC_INFURA_ID=

# Smart Contract Addresses for Private Sale
NEXT_PUBLIC_TOKEN_CONTRACT_ADDRESS=
NEXT_PUBLIC_SALE_CONTRACT_ADDRESS=

# Email Service (SendGrid)
SENDGRID_API_KEY=

# Database
DATABASE_URL=

# Blockchain RPC (for backend operations)
RPC_URL=https://bsc-dataseed1.binance.org/
PRIVATE_KEY=

# Application
BASE_URL=https://hypetoken.io

# ============================================
# NOTES
# ============================================
#
# 1. Never commit .env.local to version control
# 2. Always use NEXT_PUBLIC_ prefix for client-side variables
# 3. Store sensitive keys (API keys) in Vercel environment variables
# 4. Use different values for development, staging, and production
# 5. Rotate API keys regularly for security
#
# For production deployment:
# - Set these in Vercel Dashboard > Settings > Environment Variables
# - Or use: vercel env add VARIABLE_NAME
#
